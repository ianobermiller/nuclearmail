{
  "name": "nuclearmail",
  "version": "0.0.1",
  "description": "NuclearMail is an experiment of writing a webmail client using React and the Flux architecture. It runs completely in the browser and uses the GMail REST API.",
  "main": "App.js",
  "dependencies": {
    "asap": "^2.0.3",
    "es6-shim": "^0.31.0",
    "google-caja": "0.0.2",
    "history": "^1.12.5",
    "intl": "^0.1.4",
    "keyboardjs": "^0.4.2",
    "lodash": "^3.8.0",
    "radium": "^0.13.7",
    "react": "^0.14.0",
    "react-addons-shallow-compare": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-intl": "^1.2.0",
    "react-redux": "^3.1.0",
    "react-router": "^1.0.0-rc3",
    "redux": "^3.0.2",
    "redux-react-router": "^1.0.0-beta3",
    "redux-thunk": "^0.1.0",
    "reselect": "^2.0.0",
    "rsvp": "^3.0.18",
    "rx-lite": "^2.5.2",
    "tinytinycolor": "0.0.3",
    "utf8": "^2.1.0",
    "webpack-dev-middleware": "^1.2.0"
  },
  "devDependencies": {
    "babel-core": "^5.4.7",
    "babel-eslint": "^3.1.9",
    "babel-loader": "^5.1.2",
    "babel-plugin-react-transform": "^1.1.1",
    "eslint": "^1.3.1",
    "eslint-plugin-react": "^2.3.0",
    "expose-loader": "^0.6.0",
    "express": "^4.13.3",
    "mkdirp": "^0.5.0",
    "nodemon": "^1.3.7",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.0",
    "redbox-react": "^1.0.1",
    "redux-devtools": "^2.1.5",
    "rimraf": "^2.4.3",
    "webpack": "^1.9.6",
    "webpack-dev-server": "^1.8.2",
    "webpack-hot-middleware": "^2.0.0"
  },
  "scripts": {
    "clean": "rimraf build",
    "watch-html": "mkdirp build && nodemon --watch index.html --exec 'echo `cp index.html build/index.html`'",
    "watch-js": "mkdirp build",
    "serve": "node devServer.js",
    "build": "webpack --config webpack.prod.config.js",
    "publish": "npm run build && cp index.html build/index.html && git checkout gh-pages && cp build/* . && git commit -am 'Code update' && git push && git checkout master",
    "start": "npm run watch-html & npm run watch-js & npm run serve",
    "lint": "eslint src/"
  },
  "author": "Ian Obermiller",
  "repository": {
    "type": "git",
    "url": "https://github.com/ianobermiller/nuclearmail.git"
  },
  "license": "MIT"
}
